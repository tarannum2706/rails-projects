<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<br/>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!-- <th>Comments</th> -->
       <th colspan="1"></th>
      </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
     <tr>
      <td><%= post.title%></td>
      <td><%= post.body%></td>
      <td><%= link_to "View",post,:class => 'btn btn-outline-primary btn-sm'%></td>
     </tr>
     <% end %>
</tbody>
</table>

<%= link_to "New post", new_post_path %>
